<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="SoslaioWindow" parent="AdwApplicationWindow">
    <property name="title" translatable="no">Soslaio</property>
    <property name="height-request">190</property>
    <property name="width-request">210</property>

    <child>
      <object class="AdwBreakpoint">
        <condition>min-height: 360px</condition>
        <setter object="main-box" property="orientation">1</setter>
        <setter object="tool-box" property="orientation">0</setter>
        <setter object="v-separator" property="visible">False</setter>
        <setter object="controls" property="visible">False</setter>
        <setter object="header_bar" property="visible">True</setter>
        <setter object="vertical-menu" property="visible">False</setter>
        <setter object="copy_button" property="margin-end">6</setter>
      </object>
    </child>

    <child>
      <object class="GtkBox" id="main-box">
        <!-- HEADER BAR -->
        <child>
          <object class="AdwHeaderBar" id="header_bar">
            <property name="visible">False</property>
            <property name="css-classes">flat</property>
            <child type="end">
              <!-- TODO add save and copy buttons -->
              <object class="GtkMenuButton">
                <property name="primary">True</property>
                <property name="icon-name">open-menu-symbolic</property>
                <property name="tooltip-text" translatable="yes">Menu</property>
                <property name="menu-model">primary_menu</property>
              </object>
            </child>
          </object>
        </child>

        <!-- PICTURE -->
        <child>
          <object class="GtkBox">
            <child>
              <object class="GtkBox" id="container">
                <property name="orientation">vertical</property>
                <property name="vexpand">True</property>
                <property name="hexpand">True</property>
                <property name="halign">center</property>
                <property name="valign">center</property>
                <child>
                  <object class="GtkPicture" id="picture">
                    <property name="content-fit">contain</property>
                    <property name="can-shrink">True</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkSeparator" id="v-separator">
                <property name="visible">True</property>
              </object>
            </child>
          </object>
        </child>

        <!-- VERTICAL MENU -->
        <child>
          <object class="GtkWindowHandle" id="vertical-menu">
            <child>
              <object class="GtkBox">
                <property name="orientation">1</property>
                <property name="valign">fill</property>
                <child>
                  <object class="GtkBox" id="tool-box">
                    <property name="orientation">1</property>
                    <property name="width-request">46</property>
                    <property name="margin-bottom">6</property>
                    <property name="halign">fill</property>
                    <property name="valign">fill</property>
                    <property name="vexpand">True</property>
                    <!-- Close button -->
                    <child>
                      <object class="GtkWindowControls" id="controls">
                        <property name="decoration-layout">close</property>
                        <property name="margin-start">6</property>
                        <property name="margin-top">6</property>
                        <property name="margin-end">6</property>
                      </object>
                    </child>
                    <!-- Padding GtkBox -->
                    <child>
                      <object class="GtkBox">
                        <property name="vexpand">True</property>
                        <property name="hexpand">True</property>
                      </object>
                    </child>
                    <!-- Other buttons (settings, save, copy) -->
                    <child>
                      <object class="GtkMenuButton">
                        <property name="can-shrink">True</property>
                        <property name="has-frame">False</property>
                        <property name="primary">True</property>
                        <property name="icon-name">open-menu-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Menu</property>
                        <property name="menu-model">primary_menu</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="save_button">
                        <property name="margin-top">6</property>
                        <property name="halign">center</property>
                        <property name="css-classes">flat</property>
                        <property name="icon-name">document-save-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Save</property>
                        <!-- TODO -->
                        <!-- <signal name="clicked" handler="on_save_action" swapped="no" /> -->
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="copy_button">
                        <property name="margin-top">6</property>
                        <property name="halign">center</property>
                        <property name="css-classes">flat</property>
                        <property name="icon-name">edit-copy-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Copy</property>
                        <!-- TODO -->
                        <!-- <signal name="clicked" handler="on_copy_action" swapped="no" /> -->
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Preferences</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About Soslaio</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
