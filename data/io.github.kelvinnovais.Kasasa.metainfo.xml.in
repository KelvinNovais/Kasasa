<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.kelvinnovais.Kasasa</id>

  <name>Kasasa</name>
  <summary>Snip and pin useful information</summary>
  <developer id="io.github.kelvinnovais">
    <name translate="no">Kelvin Novais</name>
  </developer>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <content_rating type="oars-1.1" />
  <translation type="gettext">kasasa</translation>

  <recommends>
    <display_length compare="ge">360</display_length>
  </recommends>
  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <description>
    <p>
      Clip what's important to a small floating window, so you don't have to switch between windows or workspaces repeatedly.
      The window can become miniaturized or have its opacity reduced, in order to do not block what's behind it.
    </p>
    <p>Best used with:</p>
    <ul>
      <!-- translators: replace &quot; with " -->
      <li>&quot;Always on Top&quot; and/or &quot;Always on Visible Workspace&quot;</li>
      <li>A keyboard shortcut</li>
    </ul>
    <!-- translators: do not include the tags <code></code> -->
    <p>
      On GNOME, go to Settings → Keyboard → View and Customize Shortcuts → Custom Shortcuts.
      There you can set a shortcut to run <code>flatpak run io.github.kelvinnovais.Kasasa</code>
    </p>
    <!-- translators: replace "&lt;" with < and "&apos;" with ' -->
    <p>
      Note: On GNOME versions &lt; 46, a dialog will appear to set up and take the screenshot,
      instead of directly using the GNOME&apos;s screenshoter; this may be inconvenient.
    </p>
  </description>

  <launchable type="desktop-id">io.github.kelvinnovais.Kasasa.desktop</launchable>

  <screenshots>
    <screenshot type="default">
      <caption>Main window</caption>
      <image>https://raw.githubusercontent.com/KelvinNovais/Kasasa/main/screenshots/01.png</image>
    </screenshot>
    <screenshot>
      <caption>Kasasa can become a window miniature</caption>
      <image>https://raw.githubusercontent.com/KelvinNovais/Kasasa/main/screenshots/05.png</image>
    </screenshot>
    <screenshot>
      <!-- translators: "its" refer to Kasasa window -->
      <caption>Or decrease its opacity</caption>
      <image>https://raw.githubusercontent.com/KelvinNovais/Kasasa/main/screenshots/04.png</image>
    </screenshot>
  </screenshots>

