<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.kelvinnovais.Kasasa</id>

  <name>Kasasa</name>
  <summary>Make floating windows of clippings</summary>
  <developer id="io.github.kelvinnovais">
    <name translate="no">Kelvin Novais</name>
  </developer>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <content_rating type="oars-1.1" />
  <translation type="gettext">kasasa</translation>

  <recommends>
    <display_length compare="ge">360</display_length>
  </recommends>
  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <description>
    <p>
      Take screenshots and put them on small floating windows;
      the application also allows you to decrease the window opacity when the mouse pointer is over it.
    </p>
    <p>Best used with:</p>
    <ul>
      <!-- translators: replace &quot; with " -->
      <li>&quot;Always on Top&quot; and/or &quot;Always on Visible Workspace&quot;</li>
      <li>A keyboard shortcut</li>
    </ul>
    <!-- translators: do not include the tags <code></code> -->
    <p>
      On GNOME, go to Settings → Keyboard → View and Customize Shortcuts → Custom Shortcuts.
      There you can set a shortcut to run <code>flatpak run io.github.kelvinnovais.Kasasa</code>
    </p>
    <!-- translators: if needed, replace "&lt;" with < and "&apos;" with ' -->
    <p>
      Note: On GNOME versions &lt; 46, a dialog will appear to set up and take the screenshot,
      instead of directly using the GNOME&apos;s screenshoter; this may be inconvenient.
    </p>
  </description>

  <launchable type="desktop-id">io.github.kelvinnovais.Kasasa.desktop</launchable>

  <screenshots>
    <screenshot type="default">
      <caption>A small window, in dark mode</caption>
      <image>https://raw.githubusercontent.com/KelvinNovais/Kasasa/main/screenshots/01.png</image>
    </screenshot>
    <screenshot>
      <caption>A small window, in light mode</caption>
      <image>https://raw.githubusercontent.com/KelvinNovais/Kasasa/main/screenshots/02.png</image>
    </screenshot>
    <screenshot>
      <caption>Kasasa over another application</caption>
      <image>https://raw.githubusercontent.com/KelvinNovais/Kasasa/main/screenshots/03.png</image>
    </screenshot>
    <screenshot>
      <caption>Kasasa over another application, with opacity decreased</caption>
      <image>https://raw.githubusercontent.com/KelvinNovais/Kasasa/main/screenshots/04.png</image>
    </screenshot>
  </screenshots>

  <branding>
    <color type="primary" scheme_preference="light">#f9f28f</color>
    <color type="primary" scheme_preference="dark">#3583e4</color>
  </branding>

  <releases>
    <!-- TODO: update before publishing -->
    <release date="2024-12-01" version="1.1.0">
      <description translate="no">
        <p>Features:</p>
        <ul>
          <li>Move the window from anywhere on the picture</li>
          <li>Option to auto hide the vertical menu</li>
          <li>Smooth animation when changing opacity</li>
          <li>Added translations</li>
        </ul>
      </description>
    </release>
    <release date="2024-09-27" version="1.0.0">
      <description translate="no">
        <p>First release!</p>
      </description>
    </release>
  </releases>

  <url type="homepage">https://github.com/KelvinNovais/Kasasa</url>
  <url type="bugtracker">https://github.com/KelvinNovais/Kasasa/issues</url>
  <url type="vcs-browser">https://github.com/KelvinNovais/Kasasa</url>
  <url type="contribute">https://github.com/KelvinNovais/Kasasa/blob/main/CONTRIBUTING.md</url>
  <url type="translate">https://github.com/KelvinNovais/Kasasa/blob/main/CONTRIBUTING.md#translating</url>
</component>
