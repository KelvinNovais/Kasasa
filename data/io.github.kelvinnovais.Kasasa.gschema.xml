<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="kasasa">
	<schema id="io.github.kelvinnovais.Kasasa" path="/io/github/kelvinnovais/Kasasa/">
	  <!-- AUTO HIDE HEADER BAR -->
	  <key name="auto-hide-menu" type="b">
      <default>true</default>
    </key>

	  <key name="controls-timeout" type="d">
      <range min="0.10" max="2.50"/>
      <default>2.0</default>
	  </key>

	  <!-- OPACITY -->
	  <key name="change-opacity" type="b">
      <default>false</default>
    </key>

	  <key name="opacity" type="d">
      <range min="0.10" max="1.00"/>
      <default>0.35</default>
    </key>

  	  <!-- MINIATURIZE -->
	  <key name="miniaturize-window" type="b">
      <default>false</default>
    </key>

	  <!-- OCCUPY SCREEN -->
	  <key name="occupy-screen" type="d">
      <range min="0.10" max="0.75"/>
      <default>0.15</default>
    </key>

	  <!-- AUTO DISCARD WINDOW -->
	  <key name="auto-discard-window" type="b">
      <default>false</default>
    </key>

	  <key name="auto-discard-window-time" type="d">
      <range min="1.0" max="60.0"/>
      <default>1.0</default>
    </key>

	  <!-- AUTO TRASH IMAGE -->
	  <key name="auto-trash-image" type="b">
      <default>false</default>
    </key>

	  <!-- SCREENSHOT DELAY -->
	  <key name="screenshot-delay" type="u">
      <range min="1" max="60"/>
      <default>3</default>
	  </key>
	</schema>
</schemalist>
