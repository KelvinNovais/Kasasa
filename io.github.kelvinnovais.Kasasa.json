{
    "id" : "io.github.kelvinnovais.Kasasa",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "command" : "kasasa",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=xdg-pictures"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "libportal",
            "buildsystem" : "meson",
            "builddir" : true,
            "config-opts" : [
                "-Dbackend-gtk3=disabled",
                "-Dbackend-gtk4=enabled",
                "-Dbackend-qt5=disabled",
                "-Dbackend-qt6=disabled",
                "-Dportal-tests=false",
                "-Dintrospection=true",
                "-Ddocs=false",
                "-Dtests=false",
                "-Dvapi=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/flatpak/libportal.git",
                    "tag" : "0.9.1"
                }
            ]
        },
        {
            "name" : "gst",
            "buildsystem" : "meson",
            "builddir" : true,
            "config-opts" : [
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gstreamer.freedesktop.org/src/gstreamer/gstreamer-1.27.2.tar.xz",
                    "sha256" : "ce129c7ea92dce3063b029171d1324d203927132fc3e0cf92b784ddd055c241d"
                }
            ]
        },
        {
            "name" : "gst-plugins-base",
            "buildsystem" : "meson",
            "builddir" : true,
            "config-opts" : [
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://gstreamer.freedesktop.org/src/gst-plugins-base/gst-plugins-base-1.27.2.tar.xz",
                    "sha256" : "6f530a0eac4fe3a8e5487c3eea7b1fac307e2a21f056d9b41747818a88be4bf6"
                }
            ]
        },
        {
            "name" : "kasasa",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                }
            ],
            "config-opts" : [
                "--libdir=lib"
            ]
        }
    ],
    "build-options" : {
        "env" : {        }
    }
}
