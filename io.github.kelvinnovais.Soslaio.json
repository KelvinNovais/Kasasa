{
    "id" : "io.github.kelvinnovais.Soslaio",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "46",
    "sdk" : "org.gnome.Sdk",
    "command" : "soslaio",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=xdg-pictures"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
       {
          "name": "libportal",
          "buildsystem": "meson",
          "builddir": true,
          "config-opts": [
            "-Dbackend-gtk3=disabled",
            "-Dbackend-gtk4=enabled",
            "-Dbackend-qt5=disabled",
            "-Dbackend-qt6=disabled",
            "-Dportal-tests=false",
            "-Dintrospection=true",
            "-Ddocs=false",
            "-Dtests=false",
            "-Dvapi=false"
          ],
          "sources": [
            {
              "type": "git",
              "url": "https://github.com/flatpak/libportal.git",
              "tag": "0.8.1"
            }
          ]
        },
        {
            "name" : "soslaio",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/KelvinNovais/Soslaio"
                }
            ]
        }
    ]
}
